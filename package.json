{
  "name": "authentication",
  "version": "0.0.1",
  "description": "AppCompass Authentication Service",
  "author": "Jubair Saidi",
  "repository": "github:appcompass/authentication-microservice",
  "homepage": "https://github.com/appcompass/authentication-microservice",
  "bugs": {
    "url": "https://github.com/appcompass/authentication-microservice/issues"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/jubeizon"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2-runtime dist/main.js",
    "setup:secrets": "ts-node src/setup.ts secrets:init",
    "setup:db": "echo 'no db required for this service'",
    "image:build": "docker build . --file Dockerfile --tag appcompass/authentication-service:latest",
    "image:push": "docker push appcompass/authentication-service:latest",
    "deps:check": "depcruise --validate .dependency-cruiser.json src",
    "test": "jest",
    "test:unit": "jest --config ./test/jest-unit.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.2.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.2.0",
    "@nestjs/swagger": "^5.1.4",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "nats": "^2.4.0",
    "node-vault": "^0.9.22",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.2.0",
    "@types/express-serve-static-core": "^4.17.25",
    "@types/jest": "^27.0.2",
    "@types/joi": "^17.2.2",
    "@types/node": "^17.0.2",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "dependency-cruiser": "^10.7.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}